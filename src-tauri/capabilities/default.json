{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "store:default",
    "process:default",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://myinstants-api.vercel.app/"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APPDATA"
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:allow-rename",
      "allow": [
        {
          "path": "$APPDATA/songs/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "$APPDATA/songs/*"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APPDATA/songs/*"
        }
      ]
    }
  ]
}
